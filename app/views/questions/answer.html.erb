<div class="container d-flex flex-column align-items-left">
  <div class="ms-4"><h1>Stupid coaching</h1></div>
  <div class="container d-flex flex-column p-3 border-start border-start-5">
    <%= @question %>
    <div class="mt-3"><i>-You</i></div>
  </div>
  <div class="container d-flex flex-column bg-warning bg-opacity-10 p-3 border-start border-start-5">
